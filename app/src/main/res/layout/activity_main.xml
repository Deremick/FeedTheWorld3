<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexanderwolf.feedtheworld.MainActivity"
    android:background="@mipmap/background">

    <Button
        android:text="BurgerMine"
        android:layout_height="wrap_content"
        android:id="@+id/start_BurgerMine"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/start_Factory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="startMine"
        android:background="@drawable/button"
        android:layout_width="120dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Timer_Restaurant"
        android:layout_alignLeft="@+id/NumberOfFriends"
        android:layout_alignStart="@+id/NumberOfFriends"
        android:id="@+id/NumberOfRest"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberOfFact"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/NumberOfRest"
        android:layout_alignStart="@+id/NumberOfRest"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberOfEnrich"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="14dp"
        android:layout_alignTop="@+id/start_BurgerEnrichment"
        android:layout_alignLeft="@+id/NumberOfMine"
        android:layout_alignStart="@+id/NumberOfMine"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_Factory"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:onClick="startFactory"
        android:background="@drawable/button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/start_Restaurant"
        android:layout_alignEnd="@+id/start_Restaurant" />

    <Button
        android:text="Burger\nEnrichmenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_BurgerEnrichment"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:onClick="startEnrich"
        android:elevation="0dp"
        android:background="@drawable/button"
        android:layout_below="@+id/start_BurgerMine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_toStartOf="@+id/Shop"
        android:layout_toLeftOf="@+id/Shop" />

    <TextView
        android:text="Number Of..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/Start_Friends"
        android:layout_alignRight="@+id/storage"
        android:layout_alignEnd="@+id/storage" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberOfMine"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/Timer_Mine"
        android:layout_alignBottom="@+id/Timer_Mine"
        android:layout_alignLeft="@+id/NumberOfFact"
        android:layout_alignStart="@+id/NumberOfFact" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Settings_button"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textStyle="normal|bold"
        android:layout_toEndOf="@+id/Shop"
        android:layout_toRightOf="@+id/Shop"/>

    <Button
        android:text="storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storage"
        android:onClick="StorageAct"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SUM"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView10"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_alignRight="@+id/Shop"
        android:layout_alignEnd="@+id/Shop"
        android:text="0/0" />

    <Button
        android:text="Shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Shop"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:onClick="Shop"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/storage"
        android:layout_alignBottom="@+id/storage"
        android:layout_toLeftOf="@+id/storage"
        android:layout_toStartOf="@+id/storage"
        android:background="@drawable/button" />

    <TextView
        android:text="Ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/IngredientsText"
        android:layout_alignBottom="@+id/IngredientsText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberOfFriends"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/Timer_Friends"
        android:layout_alignBottom="@+id/Timer_Friends"
        android:layout_alignLeft="@+id/Settings_button"
        android:layout_alignStart="@+id/Settings_button" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer_Mine"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/start_BurgerMine"
        android:layout_alignBottom="@+id/start_BurgerMine"
        android:layout_marginLeft="170dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer_Enrich"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/NumberOfEnrich"
        android:layout_alignBottom="@+id/NumberOfEnrich"
        android:layout_marginLeft="170dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer_Factory"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/start_Factory"
        android:layout_alignBottom="@+id/start_Factory"
        android:layout_marginLeft="170dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IngredientsText"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_below="@+id/MoneyText"
        android:layout_marginLeft="80dp" />

    <Button
        android:text="Restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_Restaurant"
        android:onClick="startRestaurant"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:background="@drawable/button"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/start_Factory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer_Friends"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/start_Restaurant"
        android:layout_marginLeft="170dp" />

    <Button
        android:text="Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start_Friends"
        android:onClick="startFriends"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@drawable/button"
        android:layout_alignBaseline="@+id/Timer_Friends"
        android:layout_alignBottom="@+id/Timer_Friends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer_Restaurant"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorPrimaryDisableOnly"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/start_Restaurant"
        android:layout_alignBottom="@+id/start_Restaurant"
        android:layout_marginLeft="170dp" />

    <TextView
        android:text="Timers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/start_BurgerEnrichment"
        android:layout_marginLeft="145dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoneyText"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/Settings_button"
        android:layout_marginLeft="80dp"
        android:text="0" />

    <TextView
        android:text="Money: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/MoneyText"
        android:layout_alignBottom="@+id/MoneyText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp" />

</RelativeLayout>
