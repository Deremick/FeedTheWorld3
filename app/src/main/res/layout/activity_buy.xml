<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexanderwolf.Buy"
    android:background="@mipmap/background">


    <Button
        android:text="Buy factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_factory"
        android:onClick="buyFactory"
        android:layout_alignTop="@+id/buy_rest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:background="@drawable/button" />

    <Button
        android:text="buy mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_mine"
        android:onClick="buyMine"
        android:layout_below="@+id/buy_factory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button" />

    <Button
        android:text="buy restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_rest"
        android:onClick="buyRestaurant"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/buy_friends"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button" />

    <Button
        android:text="buy storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_storage"
        android:onClick="buyStorage"
        android:layout_below="@+id/Shop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/button" />

    <TextView
        android:text="100,000 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/Shop"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="Buy Enrich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Shop"
        android:onClick="buyEnrich"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button" />

    <Button
        android:text="buy friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_friends"
        android:onClick="buyFriend"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IngredientsTextView"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/buy_storage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="150dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="1000"
        android:progress="0"
        android:saveEnabled="true"
        android:layout_below="@+id/IngredientsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="buy ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="BuyIngredients"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textStyle="normal|bold" />

    <TextView
        android:text="100 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="5,000 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/buy_factory"
        android:layout_marginLeft="0dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="50,000 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/buy_rest"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="1,500,000 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/buy_factory"
        android:layout_marginLeft="0dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <TextView
        android:text="10,000,000 $$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_below="@+id/buy_mine"
        android:layout_marginLeft="0dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:singleLine="true"
        android:clickable="false"
        android:selectAllOnFocus="true"
        android:maxLength="9"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoneyText"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ingrdients selected:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/IngredientsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView16"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

</RelativeLayout>
