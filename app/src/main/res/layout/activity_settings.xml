<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="@color/colorPrimaryDark"
    tools:context="com.alexanderwolf.Settings">

    <Button
        android:text="Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/musicSwitcher"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:background="@drawable/button" />

    <TextView
        android:text="Music On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Notifications On/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicSwitcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textView15"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <Button
        android:text="On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/notiOnOff"
        android:textStyle="normal|bold"
        android:background="@drawable/button"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/musicSwitcher"
        android:layout_alignStart="@+id/musicSwitcher" />
</RelativeLayout>
